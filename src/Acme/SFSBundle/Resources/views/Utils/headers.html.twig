	<script>
		//Reemplazar el alert feooooo
		//Pendiente reemplazar el confirm y el prompt!
		alert = swal;
		sconfirm = function(title, msg, evt){
			swal({   
				title: title,   
				text: msg,   
				type: "warning",  
				showCancelButton: true,   
				confirmButtonColor: "#DD6B55",   
				confirmButtonText: "Confirmar",   
				cancelButtonText: "No, cancelar",   
				closeOnConfirm: true,   
				closeOnCancel: true
			}, function(isConfirm){   
				if(evt !== undefined){
					evt(isConfirm);
				} else {
					console.log("Confirmado: " + (isConfirm ? "SI" : "NO"));
				}
			});
		}
	</script>
